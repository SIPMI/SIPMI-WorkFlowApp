# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /dashboard                  controllers.DashboardController.showPage()
GET     /workflow                   controllers.WorkflowController.showPage()
GET     /setting                    controllers.SettingController.showPage()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /media/*file                controllers.Assets.at(path="/public", file)